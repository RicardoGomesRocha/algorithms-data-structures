    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest debug current file",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": [
                "${fileBasename}",
                "-c",
                "jest.json",
                "--verbose",
                "-i",
                "--no-cache",
                //"--watchAll"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}